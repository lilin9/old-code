/* 头部-start */
.recommendSongContainer .header {
  position: relative;
  width: 100%;
  height: 300rpx;
}

.recommendSongContainer .header .headerImg {
  width: 100%;
  height: 100%;
}

.recommendSongContainer .header .headerDate {
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -150rpx;
  margin-top: -50rpx;

  width: 300rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
}

.recommendSongContainer .header .headerDate .day {
  font-size: 38rpx;
}

/* 头部-end */

/* 歌曲列表-start */
/* 头部-start */
.recommendSongContainer .songListContainer {
  position: relative;
  margin-top: -20rpx;

  padding: 0 20rpx;
  border-radius: 30rpx;
  background-color: #fff;
}

.recommendSongContainer .songListContainer .listHeader {
  height: 80rpx;
  line-height: 80rpx;
}

.recommendSongContainer .songListContainer .listHeader .changeMore {
  float: right;
}

/* 头部-end */

/* 内容区-start */
.recommendSongContainer .listScroll {
  height: calc(100vh - 380rpx);
}

.recommendSongContainer .listScroll .scrollItem {
  position: relative;
  display: flex;
  margin-bottom: 20rpx;
}

.recommendSongContainer .listScroll .scrollItem .scrollItem_img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
}

.recommendSongContainer .listScroll .scrollItem .musicInfo {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.recommendSongContainer .listScroll .scrollItem .musicInfo text {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.recommendSongContainer .listScroll .scrollItem .iconfont {
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  right: 0;
  text-align: right;
}

/* 内容区-end */
