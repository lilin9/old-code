/* 顶部搜索栏-start */
.videoContainer .header {
  display: flex;
  margin: 0 10rpx;
}
.videoContainer .header .headerImg {
  width: 60rpx;
  height: 60rpx;
}
.videoContainer .header .search {
  border: 2rpx solid #eee;
  /* 
    flex属性：flex-grow: 0, flex-shrink: 1, flex-basis: auto;
    当 flex=1 时，flex-grow: 1, flex-shrink: 1, flex-basis: 0%;
    当 flex=auto 时，flex-grow: 1, flex-shrink: 1, flex-basis: auto;

    flex-grow: 可拉伸的；
    flex-shrink: 可压缩的；
    flex-basis: 当前元素的宽度;
  */
  flex: 1;
  margin: 0 20rpx;
  font-size: 26rpx;
  text-align: center;
  line-height: 60rpx;
  color: #d43c33;
  font-weight: bold;
}
/* 顶部搜索栏-end */

/* 导航栏-start */
.navScroll {
  display: flex;
  white-space: nowrap;
  height: 60rpx;
}
.navScroll .navItem {
  padding: 0 30rpx;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.navScroll .navItem .navContent {
  height: 60rpx;
  box-sizing: border-box;
}
.navScroll .navItem .active {
  border-bottom: 2rpx solid #d43c33;
}
/* 导航栏-end */

/* 视频列表-start */
.videoScroll {
  margin-top: 20rpx;
  /* 
    calc：可以动态计算 css 的宽高；运算符左右两侧必须加空格，否则计算会失效
    视口单位：vh、vw
    1vh = 1%的视口高度
    1vw = 1%的视口宽度
  */
  height: calc(100vh - 152rpx);
}
.videoScroll .videoItem {
  padding: 0 3%;
}
.videoScroll .videoItem .video {
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
}
.videoItem .content {
  font-size: 26rpx;
  height: 80rpx;
  line-height: 80rpx;
  max-width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* footer-start */
.footer {
  border-top: 2rpx solid #eee;
  padding: 20rpx 0;
}
.footer .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.footer .nickName {
  font-size: 26rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}
.footer .comments_praised {
  float: right;
}
.comments_praised .btn {
  display: inline;
  padding: 0;
  background-color: transparent;
  border-color: transparent;
}
.comments_praised .btn:after {
  border: none;
}
.comments_praised .item {
  margin-left: 50rpx;
  position: relative;
}
.comments_praised .item .count {
  position: absolute;
  top: -20rpx;
  font-size: 20rpx;
}
/* footer-end */
/* 视频列表-end */