.songPlayContainer {
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
}
.songPlayContainer .author {
  color: #fff;
  margin: 20rpx 0;
}
/* 摇杆底座 */
.songPlayContainer .circle {
  position: relative;
  z-index: 100;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #fff;
  margin: 10rpx 0;
}
/* 摇杆 */
.songPlayContainer .imgNeedle {
  position: relative;
  z-index: 99;
  top: -40rpx;
  left: 60rpx;
  width: 192rpx;
  height: 274rpx;
  transform: rotate(-20deg);
  transform-origin: 40rpx 0;
  transition: transform 1s;
}
.songPlayContainer .neddleRotate {
  transform: rotate(0deg);
}
/* 磁盘区 */
.songPlayContainer .discContainer {
  position: relative;
  top: -170rpx;
  width: 598rpx;
  height: 598rpx;
}
/* 磁盘 */
.songPlayContainer .discContainer .imgDisc {
  width: 100%;
  height: 100%;
}
/* 歌曲封面 */
.songPlayContainer .discContainer .musicImg {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  width: 370rpx;
  height: 370rpx;
  border-radius: 50%;
}

/* 磁盘动画旋转-start */
.disAnimation {
  animation: disc 5s linear infinite;
  animation-delay: 1s;
}
/*
  @keyframes：设置动画帧
    1.from …… to ……
      - 适用于简单的动画，只有起始帧和结束帧
    2.百分比
      - 多适用于复杂的动画，动画不止两帧；
      - 0% ~ 100% 之间的帧可以随意拆分
*/
@keyframes disc {
  from {
    transform: rotate(0deg);
  } to {
    transform: rotate(360deg);
  }
}
/* 磁盘动画旋转-end */

/* 进度条-start */
.songPlayContainer .progressControl {
  position: absolute;
  bottom: 200rpx;
  width: 640rpx;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
}
.songPlayContainer .progressControl .barControl {
  position: relative;
  width: 450rpx;
  height: 4rpx;
  background-color: rgba(0, 0, 0, 0.4);
  margin: auto 10rpx;
}
.songPlayContainer .progressControl .barControl .audio_currentTime_bar {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  height: 4rpx;
  background-color: #d43c33;
}
.songPlayContainer 
.progressControl 
.barControl 
.audio_currentTime_bar 
.audio_circle {
  position: absolute;
  right: -12rpx;
  top: -4rpx;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #fff;
}
/* 进度条-end */

/* 底部音乐控制区域-start */
.songPlayContainer .musicControl {
  position: absolute;
  bottom: 40rpx;
  left: 0;
  border-top: 1rpx solid #fff;
  width: 100%;
  display: flex;
}
.songPlayContainer .musicControl .iconfont {
  width: 20%;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  color: #fff;
  font-size: 50rpx;
}
.songPlayContainer .musicControl .bigIconfont {
  font-size: 80rpx;
}
/* 底部音乐控制区域-end */