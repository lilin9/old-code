/* 轮播图-start */
.banners {
  width: 100%;
  height: 300rpx;
}
.banners-image {
  width: 100%;
  height: 100%;
}
/* 轮播图-end */

/* 导航列表-start */
.navContainer {
  display: flex;
}
.navItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}
.iconfont {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background-color: rgba(240, 19, 19);
  font-size: 50rpx;
  color: #fff;
  margin: 20rpx 0;
}
.navItem text:nth-child(2) {
  font-size: 26rpx;
}
/* 导航列表-end */

/* 歌曲推荐-start */
.recommendContainer {
  padding: 20rpx;
}
.recommendScroll {
  display: flex;
  height: 270rpx;
}
.scrollItem {
  width: 200rpx;
  margin-right: 20rpx;
}
.scrollItem .scrollItem_img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.scrollItem .scrollItem_title {
  font-size: 26rpx;
  /* 单行文本溢出隐藏，省略号代替 */
  /* display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */

  /* 多行文本溢出隐藏，省略号代替 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical; /* 设置对齐模式 */
  -webkit-line-clamp: 2;
}
/* 歌曲推荐-end */

/* 排行榜-start */
.topList {
  padding: 20rpx;
}
.topListWiper {
  height: 400rpx;
}
.swiperItem {
  width: 96%;
  background-color: #fbfbfb;
}
.swiperItem .musicTitle {
  font-size: 30rpx;
  line-height: 80rpx;
}
.musicItem {
  /* 当父元素被设置为 flex，其子元素会自动成为 block */
  display: flex;
  margin-bottom: 20rpx;
}
.musicItem .musicItem_img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 9rpx;
}
.musicItem .count {
  display: block;
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}
.musicItem .musicName {
  height: 100rpx;
  line-height: 100rpx;
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
/* 排行榜-end */