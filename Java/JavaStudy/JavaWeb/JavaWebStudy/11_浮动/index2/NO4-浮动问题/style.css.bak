body {
  width: 90%;
  max-width: 900px;
  margin: 0 auto;
}

body h1 {
	test-align: center;
}

div:nth-of-type(1) {
  width: 36%;
  float: left;
}

div:nth-of-type(2) {
  width: 30%;
  float: right;
  margin-left: 4%;
}

div:nth-of-type(3) {
  width: 26%;
  float: right;
}

footer {
	margin-top: 4%;
}

.clearfix {
	clear: both;
}

.column, footer {
	padding: 1%;
	border: 2px solid white;
	background-color: red;
}

.column {
	height: 550px;
	overflow: scroll;
}

* { /*布局损坏解决办法一*/
	box-sizing: border-box;
}